import math

print("1. Seno de un ángulo")
print("2. Coseno de un ángulo")
print("3. Raíz cuadrada de un número")
print("4. Potencia de dos números")
print("5. SALIR")

option = int(input("Introduce una opción: "))

match option:
    case 1:
        angulo_grados = float(input("Introduce el ángulo en grados: "))
        angulo_radianes = math.radians(angulo_grados)
        seno_math = math.sin(angulo_radianes)
        print(f"El seno de {angulo_grados}° es: {seno_math}")

    case 2:
        angulo_grados = float(input("Introduce el ángulo en grados: "))
        angulo_radianes = math.radians(angulo_grados)
        coseno_math = math.cos(angulo_radianes)
        print(f"El coseno de {angulo_grados}° es: {coseno_math}")

    case 3:
        numero = float(input("Introduce un número: "))
        if numero < 0:
            print("No se puede calcular la raíz cuadrada de un número negativo.")
        else:
            raiz_math = math.sqrt(numero)
            print(f"La raíz cuadrada de {numero} es: {raiz_math}")

    case 4:
        base = float(input("Introduce la base: "))
        exponente = float(input("Introduce el exponente: "))
        resultado = pow(base, exponente)
        print(f"{base} elevado a {exponente} es: {resultado}")

    case 5:
        print("Saliendo del programa...")

    case _:
        print("Opción no válida.")
